<pipeline name="continue-if">
    <debug>Received: {{__payload__}}</debug>
    <continue-if condition="{{__payload__ == 42}}" output_var="is_42">
        <debug>you 42, fool</debug>
    </continue-if>
    <continue-if condition="{{__payload__ != 42}}" output_var="is_not_42">
        <debug>you aint 42</debug>
    </continue-if>
    <debug>
        is_42={{ is_42 }}
        is_not_42={{ is_not_42 }}
    </debug>
</pipeline>