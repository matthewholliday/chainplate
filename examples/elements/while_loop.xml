<pipeline name="demonstrating a more complex pipeline">
    <set-variable output_var="outer_var">pizza1</set-variable>
    <while-loop condition="{{ outer_var == 'pizza1' }}">
        <debug>Outer loop executed!</debug>
        <set-variable output_var="outer_var">sushi1</set-variable>

        //Inner loop...
        <set-variable output_var="inner_var">pizza2</set-variable>
        <while-loop  condition="{{ inner_var == 'pizza2' }}">
            <debug>Inner loop executed!</debug>
            <set-variable output_var="inner_var">sushi2</set-variable>
        </while-loop>
    </while-loop>
</pipeline>