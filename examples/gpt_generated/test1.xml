<pipeline name="Simple Hello">
  <set-variable output_var="tone">Reply in a cheerful tone.</set-variable>

  <send-prompt output_var="response">
    {{ tone }}
    What is 2 + 2?
  </send-prompt>

  <debug>The model answered: {{ response }}</debug>

  <!-- Mark the final output -->
  <set-variable output_var="__chat_output__">{{ response }}</set-variable>
</pipeline>
